<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.jk.mapper.ProviderMapper">

  <insert id="addnews">
    insert into 71news (title,author,releaseDate,context,keywords,type)
    values(#{title},#{author},#{releaseDate},#{context},#{keywords},#{type})

  </insert>
  <update id="updatenews">
    update 71news set title=#{title},author=#{author},context=#{context},
    keywords=#{keywords},type=#{type},releaseDate=#{releaseDate} where id=#{id}

  </update>
  </mapper>